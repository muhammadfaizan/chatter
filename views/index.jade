extends layout
block styles
  link(rel='stylesheet', href='/stylesheets/main.css')
block scripts
  script(src='/javascripts/main.js', type='text/javascript')
block content
  .container
    form#contact(action='javascript:;', onSubmit="App.onNameFormSubmit(event)", method='post')
      h3 Chatter
      h4 A sample app for every chat
      fieldset
        input(placeholder='Your name', id='name' type='text', tabindex='1', required='', autofocus='')
      fieldset
        button#contact-submit(name='submit', type='submit', data-submit='...Sending') Submit
      p.copyright
        | Developed by 
        a(href='https://github.com/muhammadfaizan/chatter', target='_blank', title='Muhammad Faizan') Muhammad Faizan
